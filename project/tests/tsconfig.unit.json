{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "..",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],
    "isolatedModules": false,
    "incremental": false,
    "baseUrl": ".."
  },
  "include": [
    "../src/lib/game-physics/**/*.ts",
    "../src/lib/env.ts",
    "../src/app/api/game-physics/route.ts",
    "../src/app/api/llm/route.ts",
    "./unit/**/*.test.ts"
  ],
  "exclude": ["../node_modules", "./dist"]
}
